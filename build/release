#!/bin/bash

npm run clean
npm test

# compile
stylus client/css/all.styl -o .bin/public/css --include-css --include client/css --compress
cleancss .bin/public/css/all.css -o .bin/public/css/all.css --s0
jade views/**/* --out .bin --client --commonjs --no-debug
taunus -o
browserify client/js/main.js -o .bin/public/js/all.js -t uglifyify

# revving
