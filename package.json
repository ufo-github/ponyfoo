{
  "name": "ponyfoo",
  "description": "Micro-blogging platform",
  "homepage": "https://github.com/bevacqua/ponyfoo",
  "version": "0.5.0",
  "author": {
    "name": "Nicolas Bevacqua",
    "email": "hello@bevacqua.io",
    "url": "http://ponyfoo.com"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/bevacqua/ponyfoo.git"
  },
  "bugs": {
    "url": "https://github.com/bevacqua/ponyfoo/issues"
  },
  "scripts": {
    "lint": "jshint . --reporter node_modules/jshint-stylish/stylish.js",
    "tape": "tape test/**/*",
    "test": "npm run lint && npm run tape",
    "mkdirs": "mkdir -p .bin/public/js",
    "browserify": "browserify client/js/main.js -o .bin/public/js/all.js -d",
    "views": "jade views --out .bin --client --commonjs --no-debug",
    "build": "npm run mkdirs && npm run browserify && npm run views",
    "start": "npm run build && nodemon app"
  },
  "dependencies": {
    "contra": "^1.5.6",
    "express": "^4.1.2",
    "jade": "^1.3.1",
    "lodash": "^2.4.1",
    "mongoose": "^3.8.9",
    "nconf": "^0.6.9",
    "winston": "^0.7.3"
  },
  "devDependencies": {
    "browserify": "^4.1.2",
    "errorhandler": "^1.0.1",
    "jshint": "^2.5.0",
    "jshint-stylish": "^0.2.0",
    "nodemon": "^1.0.17",
    "proxyquire": "^0.6.0",
    "serve-static": "^1.1.0",
    "sinon": "^1.9.1",
    "tape": "^2.12.3"
  }
}
