form.mc-composer.ly-section(action='/api/' + parentType + '/' + parent.slug + '/comments', method='post', name='comment')
  div.mc-author
    input.mc-name(placeholder='John Doe', name='name')
    input.mc-email(placeholder='example@ponyfoo.com', name='email', type='email')
    input.mc-website(placeholder='ponyfoo.com (optional)', name='website')
  noscript
    input.uv-verify(name='verify', value='Promise not to be a bot? Clear this field!', placeholder='This field is only for tricksters...')
  div
    textarea.wk-textarea.mc-content(name='content', placeholder='Please enter your comment here, Markdown formatting is supported.')
  span(aria-label='Make your comment immediately available!')
    button.bt-button.bt-pink.mc-send(type='submit')
      span.bt-text Add Comment
  a.mc-cancel-reply.lk-link.uv-hidden(aria-label='Start a new discussion instead!')
    span Cancel Reply
    em.mc-cancel-detail (create a new comment thread instead)
