section#markdown-template.template(data-class='markdown-entry')
    form#markdown-editor(method='POST',action='/entry')
        p
            label(for='entry-title')='Title'
            input(type='text',name='entry-title')

        div#wmd-button-bar-brief.wmd-button-bar
        div
            textarea#wmd-input-brief.wmd-input.entry-brief

        div#wmd-button-bar-text.wmd-button-bar
        div
            textarea#wmd-input-text.wmd-input.entry-text

    article.blog-entry
        header.blog-entry-title
        section#wmd-preview-brief.blog-entry-brief
        section#wmd-preview-text.blog-entry-text