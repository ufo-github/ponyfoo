section#entry-review-template.template(data-class='entry-review')
  h1='Entry Review'

  table
    thead
      tr
        th='Date'
        th='Title'
        th
    tbody
      // {{#entries}}
      tr.entry-row(data-id='{{_id}}')
        td='{{dateText}}'
        td.title
          a(href='{{permalink}}')='{{title}}'
        td
          a.edit(data-hint='Edit', href='/author/entry/{{_id}}')='Edit'
          a.remove(data-hint='Delete')
      // {{/entries}}