// {{#entries}}
article.blog-entry-section.blog-entry(data-keywords='{{keywords}}', itemscope, itemtype='http://schema.org/BlogPosting')
  meta(itemprop='dateCreated', content='{{dateText}}')
  meta(itemprop='keywords', content='{{keywords}}')
  meta(itemprop='discussionUrl', content=config.server.authority(slug) + '{{permalink}}#comments')
  meta(itemprop='interactionCount', content='{{commentCount}} UserComments')

  include _social

  header.blog-entry-title
    h1
      a(href='{{permalink}}', data-hint='{{tagged}}', itemprop='headline')='{{title}}'

    span.blog-entry-legends
      span.blog-entry-legend.reading-label
      span.blog-entry-legend(data-hint='posted {{dateText}}')=', posted {{timeAgo}}'

  section.markdown.blog-entry-body(itemprop='articleBody')
    section.blog-entry-brief.meta-description(itemprop='about')='{{{html.brief}}}'
    section.blog-entry-text='{{{html.text}}}'

  footer.blog-entry-footer.clearfix
    section.comment-count
      a.highlighted-link.hint-before(href='{{commentsLink}}', data-hint='Visit the discussion section')='{{commentsText}}'

    // {{#tagged}}
    section.blog-entry-tags
      // {{#_tags}}
      a.tag(href='/search/tagged/{{.}}', data-hint='Find posts tagged "{{.}}"').highlighted-link='{{.}}'
      // {{/_tags}}
    // {{/tagged}}

// {{/entries}}