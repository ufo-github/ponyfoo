body
  font-family f-core
  background c-background
  color #333

main
  box-radius 4px
  background-color c-moderate
  border 1px solid c-grayish

ul,
ol
  margin 0
  padding 0

b,
strong,
  font-weight bold

i,
em,
  font-style italic

ins
  text-decoration none

del
  text-decoration line-through

img
  max-width 100%
  border none

kbd
  display inline-block
  border 1px solid #ccc
  margin 0 0.1em
  padding 0.1em 0.6em
  line-height 1.4
  font-size 11px
  font-family f-arial
  background-color #f7f7f7
  box-shadow 0 1px 0 #bbb, 0 0 0 2px #fff inset
  box-radius 3px
  color #333
  text-shadow 0 1px 0 #fff
  white-space nowrap

button
  border none
  background-color c-yellow-js
  color c-pink
  padding 6px 8px
  font-size 1.2em

  &:hover
    background-color lighten(c-yellow-js, 20%)
