.ck-input
  position absolute
  visibility hidden
  pointer-events none
  opacity 0

.ck-checkbox,
.ck-radio
  display inline-block
  cursor pointer

.ck-checkbox:before,
.ck-radio:before
  display inline-block
  margin-right 5px
  background-color c-strong
  border 1px solid c-grayish
  color transparent
  text-shadow none

.ck-checkbox:before
  padding 3px 5px 4px 5px
  border-radius 6px
  content '\2713'

.ck-radio:before
  padding 4px 8px
  border-radius 600px
  content '\25CF'

.ck-checkbox:hover:before,
.ck-radio:hover:before
  background-color c-strong-hover
  color c-blue-hover

.ck-input:checked ~ .ck-checkbox:before,
.ck-input:checked ~ .ck-radio:before
  color #fff
  text-shadow 1px 1px 1px c-moderate

